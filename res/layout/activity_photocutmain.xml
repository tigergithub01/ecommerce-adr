<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/mylayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#aa000000"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="40.0dip"
        android:paddingRight="40.0dip"
        android:visibility="gone" >

        <Button
            android:id="@id/Button_rotate"
            style="@style/RoboTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="20.0dip"
            android:paddingLeft="25.0dip"
            android:paddingRight="25.0dip"
            android:textColor="#ff33b5e5" />

        <LinearLayout
            android:id="@id/fixedAspectRatioLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="15.0dip"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/fixedAspectRatio"
                style="@style/RoboTheme"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="right|center" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@id/fixedAspectRatioToggle"
                    style="@style/RoboTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/aspectRatioXHeader"
                style="@style/RoboTheme"
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                android:gravity="right" />

            <TextView
                android:id="@id/aspectRatioX"
                style="@style/RoboTheme"
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                android:gravity="left" />
        </LinearLayout>

        <SeekBar
            android:id="@id/aspectRatioXSeek"
            style="@style/RoboTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/aspectRatioYHeader"
                style="@style/RoboTheme"
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                android:gravity="right" />

            <TextView
                android:id="@id/aspectRatioY"
                style="@style/RoboTheme"
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                android:gravity="left" />
        </LinearLayout>

        <SeekBar
            android:id="@id/aspectRatioYSeek"
            style="@style/RoboTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10" />

        <LinearLayout
            android:id="@id/showGuidelinesLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/showGuidelines"
                style="@style/RoboTheme"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@id/showGuidelinesSpin"
                    style="@style/RoboTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
            </LinearLayout>
        </LinearLayout>

        <Button
            style="@style/RoboTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="20.0dip"
            android:paddingLeft="25.0dip"
            android:paddingRight="25.0dip"
            android:textColor="#ff33b5e5"
            android:textSize="30.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/clicklayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ff000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@id/linear_cancel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@id/cancelpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="20.0dip" />

            <TextView
                android:id="@id/cutcanl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20.0dip"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="20.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/linear_ok"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@id/okpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="20.0dip" />

            <TextView
                android:id="@id/Button_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="20.0dip"
                android:text="完成"
                android:textColor="#ffffffff"
                android:textSize="20.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <com.leon.commons.cropper.CropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@id/CropImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/clicklayout"
        android:layout_gravity="center"
        android:background="#aa000000" />

</RelativeLayout>