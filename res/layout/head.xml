<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/ll_top_bar">

    <RelativeLayout
        android:id="@id/head_top_bg"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/top_bg"
        android:gravity="top" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip" >

            <ImageView
                android:id="@+id/iv_bar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/previous"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_bar_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="左边"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_bar_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_bar_left"
                    android:src="@drawable/point_sel_bull"
                    android:visibility="gone" />
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我是标题"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_bar_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/nav_icon"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip" >

            <ImageView
                android:id="@+id/iv_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2.0dip"
                android:paddingLeft="8.0dip"
                android:paddingTop="2.0dip"
                android:text="右边"
                android:textColor="@color/white"
                android:visibility="gone" />
        </FrameLayout>

        <ProgressBar
            android:id="@+id/pb_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>