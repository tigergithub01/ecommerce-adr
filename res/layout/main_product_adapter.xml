<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_product"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/tv_product_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/imageviewboundshape"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:src="@drawable/app_default_image" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_product_img"
        android:layout_toRightOf="@+id/tv_product_img"
        android:gravity="left|center_vertical"
        android:padding="0.0dip"
        android:singleLine="false"
        android:text="111111111111111111111111111111111111111111"
        android:textColor="#595757"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:layout_toRightOf="@+id/tv_product_img"
        android:layout_alignBottom="@+id/tv_product_img"
        android:gravity="left|bottom"
        android:padding="0.0dip"
        android:singleLine="true"
        android:text="ï¿¥750"
        android:textColor="#595757"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:layout_alignBottom="@+id/tv_product_img"
        android:layout_toRightOf="@+id/tv_product_price" 
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_product_buy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/product_buy_btn"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_product_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/tv_product_buy_btn"
            android:background="@drawable/product_share_btn"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>