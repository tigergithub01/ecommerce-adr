<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="@string/upgrade_version_tip"
            android:textColor="#ff000000"
            android:textSize="22.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:background="#ff33b5e5" />
		
        
        <TextView
            android:id="@+id/tv_package_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
        
        <TextView
            android:id="@+id/tv_upgrade_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="124dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_upgrade_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0%" />

        <ProgressBar
            android:id="@+id/pgb_upgrade"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2.0dip"
            android:background="#ff33b5e5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_upgrade_ver_ok"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3.0dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:singleLine="true"
                android:text="@string/upgrade_version_now"
                android:textColor="#ff000000"
                android:textSize="15.0dip" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:background="#ffdddddd" />

            <Button
                android:id="@+id/btn_upgrade_ver_cancel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3.0dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:singleLine="true"
                android:text="@string/upgrade_version_later"
                android:textColor="#ff000000"
                android:textSize="15.0dip" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>