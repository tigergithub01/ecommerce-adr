<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0eff4" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffc8c7cc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/myinfo_phone_label"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/default_textsize" />

                    <EditText
                        android:id="@+id/et_myinfo_phone_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20.0dip"
                        android:background="@drawable/edit_press"
                        android:hint="@string/myinfo_phone_hint_text"
                        android:inputType="phone"
                        android:textColor="#ff333333"
                        android:textColorHint="#ffcbcbcb"
                        android:textSize="@dimen/default_textsize" 
                        android:enabled="false" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffc8c7cc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/myinfo_username_label"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/default_textsize" />

                    <EditText
                        android:id="@+id/et_myinfo_username"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20.0dip"
                        android:background="@drawable/edit_press"
                        android:hint="@string/myinfo_username_hint_text"
                        android:textColor="#ff333333"
                        android:textColorHint="#ffcbcbcb"
                        android:maxLength="30"
                        android:textSize="@dimen/default_textsize" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffc8c7cc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/myinfo_email_label"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/default_textsize" />

                    <EditText
                        android:id="@+id/et_myinfo_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20.0dip"
                        android:background="@drawable/edit_press"
                        android:hint="@string/myinfo_email_hint_text"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="#ff333333"
                        android:textColorHint="#ffcbcbcb"
                        android:textSize="@dimen/default_textsize" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffc8c7cc" android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/myinfo_id_cardno_label"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/default_textsize" />

                    <EditText
                        android:id="@+id/et_myinfo_idcard_no"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20.0dip"
                        android:background="@drawable/edit_press"
                        android:hint="@string/myinfo_id_cardno_hint_text"
                        android:singleLine="true"
                        android:textColor="#ff333333"
                        android:maxLength="20"
                        android:textColorHint="#ffcbcbcb"
                        android:textSize="@dimen/default_textsize" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffc8c7cc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffc8c7cc" />

                <RelativeLayout
                    android:id="@+id/rl_my_info_bank_card"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:text="@string/myinfo_bankcard_info_label"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/default_textsize" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_bank_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=""
                            android:textColor="#ffcbcbcb" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_in" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffc8c7cc" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffc8c7cc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>