<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_bg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_modify_pwd_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:src="@drawable/forgot_pwd_phone" />

            <ImageView
                android:id="@+id/iv_modify_pwd_phone_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15.0dip"
                android:src="@drawable/icon_del"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_modify_pwd_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/iv_modify_pwd_phone_del"
                android:layout_toRightOf="@id/iv_modify_pwd_phone"
                android:background="@drawable/edit_press"
                android:ems="10"
                android:hint="@string/modify_pwd_phone_hint_text"
                android:inputType="phone"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="14.0dip"
                android:textColor="@color/text"
                android:textColorHint="@color/text_hint"
                android:textSize="17.0sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignLeft="@id/iv_modify_pwd_phone"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14.0dip"
                android:background="@color/line_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_modify_pwd_vf_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:src="@drawable/forgot_pwd_verify_code" />

            <TextView
                android:id="@+id/tv_modify_pwd_vf_code_get"
                android:layout_width="@dimen/confirmation_image_width"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="#F3A309"
                android:gravity="center"
                android:text="@string/modify_pwd_vfcode_get_text"
                android:textColor="#ffffffff"
                android:textSize="@dimen/default_textsize" />

            <EditText
                android:id="@+id/et_modify_pwd_vf_code"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/tv_modify_pwd_vf_code_get"
                android:layout_toRightOf="@id/iv_modify_pwd_vf_code"
                android:background="@drawable/edit_press"
                android:ems="10"
                android:hint="@string/modify_pwd_vfcode_hint_text"
                android:inputType="text"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="14.0dip"
                android:textColor="@color/text"
                android:textColorHint="@color/text_hint"
                android:textSize="17.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignLeft="@id/et_modify_pwd_vf_code"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14.0dip"
                android:background="@color/line_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_modify_pwd_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:src="@drawable/forgot_pwd_password" />

            <ImageView
                android:id="@+id/iv_modify_pwd_password_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15.0dip"
                android:src="@drawable/icon_del"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_modify_pwd_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/iv_modify_pwd_password_del"
                android:layout_toRightOf="@id/iv_modify_pwd_password"
                android:background="@drawable/edit_press"
                android:ems="10"
                android:hint="@string/modify_pwd_pwd_hint_text"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingLeft="14.0dip"
                android:textColor="@color/text"
                android:textColorHint="@color/text_hint"
                android:textSize="17.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignLeft="@id/et_modify_pwd_password"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14.0dip"
                android:background="@color/line_bg" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_modify_pwd_confirm"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="29.0dip"
        android:background="@drawable/common_btn"
        android:gravity="center"
        android:text="@string/modify_pwd_confirm_text"
        android:textColor="#ffffffff"
        android:textSize="20.0sp" />

</LinearLayout>